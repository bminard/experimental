{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `installer_conf`}} <wait>",
        "debian-installer=en_CA <wait>",
        "auto <wait>",
        "locale=en_CA <wait>",
        "kbd-chooser/method=us <wait>",
        "keyboard-configuration/xkb-keymap=us <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=flatfoot.ca <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=us <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 32768,
      "guest_os_type": "Debian_64",
      "guest_additions_mode": "disable",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `iso_url`}}",
      "ssh_username": "vagrant",
      "ssh_private_key_file": "{{user `ssh_private_key`}}",
      "ssh_port": 22,
      "ssh_timeout": "1000s",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -hP now",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--usb", "on" ],
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ],
      "vm_name": "debian-{{user `os_version`}}-amd64"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "9",
      "output": "debian-{{user `os_version`}}-amd64_{{.Provider}}.box"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "vagrant_ssh_key.pub",
      "destination": "/tmp/authorized_keys2"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/update.sh",
        "scripts/sshd.sh",
        "scripts/sudoers.sh",
        "scripts/vagrant.sh",
        "scripts/networking.sh",
        "scripts/cleanup.sh"
      ]
    }
  ]
}
