{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
          "<esc><wait>",
          "linux ks=http://{{.HTTPIP}}:{{.HTTPPort}}/{{user `installer_conf`}}",
          "<enter><wait>"
      ],
      "boot_wait": "5s",
      "guest_os_type": "RedHat_64",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "iso_url": "{{user `iso_url`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_timeout": "600s",
      "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -hP now",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--usb", "on" ],
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ],
      "vm_name": "centos-{{user `os_version`}}-x86_64"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
          "sudo yum -y install epel-release",
          "sudo yum -y install gcc make bzip2 kernel-headers kernel-devel dkms",
          "sudo yum clean all",
          "sudo mount -o loop /home/vagrant/VBoxGuestAdditions.iso /mnt",
          "sudo sh /mnt/VBoxLinuxAdditions.run",
          "sudo umount /mnt",
          "sudo rm -f /home/vagrant/VBoxGuestAdditions.iso"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "9",
      "output": "centos-{{user `os_version`}}-x86_64_{{.Provider}}.box"
    }
  ]
}
